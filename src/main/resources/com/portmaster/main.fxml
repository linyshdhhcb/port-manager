<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.portmaster.controller.MainController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0">
               <children>
                  <Label text="端口管理工具">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="portTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="protocolColumn" prefWidth="75.0" text="协议" />
          <TableColumn fx:id="localAddressColumn" prefWidth="120.0" text="本地地址" />
            <TableColumn fx:id="portColumn" prefWidth="75.0" text="端口" />
            <TableColumn fx:id="foreignAddressColumn" prefWidth="120.0" text="外部地址" />
            <TableColumn fx:id="stateColumn" prefWidth="100.0" text="状态" />
            <TableColumn fx:id="pidColumn" prefWidth="75.0" text="PID" />
            <TableColumn fx:id="processNameColumn" prefWidth="150.0" text="进程名称" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextField fx:id="searchTextField" prefHeight="23.0" prefWidth="150.0" promptText="请输入端口号" />
                  <Button fx:id="searchButton" mnemonicParsing="false" text="搜索" />
                  <Button fx:id="refreshButton" mnemonicParsing="false" text="刷新" />
                  <Button fx:id="autoRefreshButton" mnemonicParsing="false" text="停止自动刷新" />
                  <Button fx:id="killButton" mnemonicParsing="false" text="关闭选中端口" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0">
               <children>
                  <Label fx:id="statusLabel" text="就绪">
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>